# -------------------------------------------------------------------
# EarthFrame backend configuration
# Copy this file to `.env` and adjust values as needed.
# -------------------------------------------------------------------

# General application configuration
# -------------------------------------------------------------------
# "development" | "production"
ENV=development
# FastAPI server port
PORT=8000

# Frontend configuration
# -------------------------------------------------------------------
FRONTEND_ORIGIN=http://localhost:5173

# Database configuration
# -------------------------------------------------------------------
# For local dev (Postgres on host):
DATABASE_URL=postgresql+psycopg://earthframe:earthframe@localhost:5432/earthframe

# For Docker Compose (Postgres service is "db"):
# DATABASE_URL=postgresql+psycopg://earthframe:earthframe@db:5432/earthframe

# Test Database
# -------------------------------------------------------------------
# For local dev (Postgres on host):
TEST_DATABASE_URL=postgresql+psycopg://earthframe:earthframe@localhost:5432/earthframe_test

# For Docker Compose (Postgres service is "db"):
# TEST_DATABASE_URL=postgresql+psycopg://earthframe:earthframe@db:5432/earthframe_test

# Security configuration
# -------------------------------------------------------------------
# General app secret (used for sessions, CSRF, or fallback signing)
SECRET_KEY=superlongrandomsecretkey

# JWT / OAuth2 configuration
JWT_SECRET_KEY=superlongrandomjwtkey
RESET_PASSWORD_SECRET_KEY=superlongrandomresetkey
VERIFICATION_SECRET_KEY=superlongrandomverifykey

# Token lifetime (in seconds) â€” e.g., 1 hour = 3600, 1 day = 86400
LIFETIME_SECONDS=3600

# Cookie configuration (used if you store session or auth cookies)
COOKIE_NAME=simscope_auth
COOKIE_SECURE=True        # Set True in production (requires HTTPS)
COOKIE_SAMESITE=lax       # Or "strict" for extra CSRF protection
COOKIE_MAX_AGE=2592000    # Match refresh token lifetime
COOKIE_HTTPONLY=True      # Prevent JavaScript access
